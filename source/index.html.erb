---
pageable: true
per_page: 10
---

<% content_for :title, "努力奔跑" %>
<div class="row">
  <div class="span8">
    <% if paginate %>
        <p>Page <%= page_number %> of <%= num_pages %></p>

        <% if prev_page %>
            <p><%= link_to '上一页', prev_page %></p>
        <% end %>
    <% end %>
    <% page_articles.each_with_index do |article, i| %>
        <article class="block clearfix">
          <h4>
            <div class="timestamp"><%= date_display article.date %></div>
            <%= link_to article.title, article %>
          </h4>
          <p><%= article.summary %></p>

          <div class="pull-right"><%= link_to "深入阅读 >>", article %></div>
        </article>
    <% end %>

    <% if paginate %>
        <% if next_page %>
            <p><%= link_to '下一页', next_page %></p>
        <% end %>
    <% end %>
  </div>
  <%= partial 'sidebar' %>
</div>
