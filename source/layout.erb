<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'/>
  <meta name="keywords" content="<%= yield_content :keywords %>">
  <% title = yield_content :title %>
  <title><%= title.present? ? title : current_page.data.title %> | Sahara</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag "all" %>
  <%= javascript_include_tag "html5", "application" %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar_collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Sahara</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar_collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if active_menu? 'hotchpotch' %>"><%= link_to  '什锦杂烩', tag_path('hotchpotch') %></li>
        <li class="<%= 'active' if active_menu? 'tech' %>"><%= link_to  '技术活呀', tag_path('tech') %></li>
        <li class="<%= 'active' if active_menu? 'photo' %>"><%= link_to  '美片片儿', "/photos.html" %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="<%= 'active' if current_page.path == 'contact.html' %>">
          <% link_to  '/contact.html' do %>
            <i class="fa fa-leaf"></i> Contact Me
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="container-fluid">
  <%= yield %>
</div>
<%= yield_content :scripts %>
<%= partial "ga" %>
</body>
</html>
