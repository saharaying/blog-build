<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'/>
  <meta name="keywords" content="<%= yield_content :keywords %>">
  <% title = yield_content :title %>
  <title><%= title.present? ? title : current_page.data.title %> - Sahara</title>
  <%= stylesheet_link_tag "all" %>
  <!--[if lt IE 9]>
  <%= stylesheet_link_tag "ie" %>
  <![endif]-->
  <%= javascript_include_tag "html5", "application" %>
</head>
<body>
<div class="container">
  <header>
    <div class="clearfix">
      <div class="cs-text pull-left">
        <% link_to '/' do %>
            <span>s</span>
            <span>a</span>
            <span>h</span>
            <span>a</span>
            <span>r</span>
            <span>a</span>
        <% end %>
      </div>
      <% unless current_page.path == 'contact.html' %>
      <ul class="ca-menu small pull-right">
        <li>
          <% link_to '/contact.html' do %>
              <span class="ca-icon">C</span>
              <div class="ca-content">
                <h2 class="ca-main">Contact</h2>
                <h3 class="ca-sub">联系我</h3>
              </div>
          <% end %>
        </li>
      </ul>
      <% end %>
    </div>
  </header>
  <%= yield %>
</div>
<%= yield_content :scripts %>
<%= partial "ga" %>
</body>
</html>
